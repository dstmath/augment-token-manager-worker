// Prisma Schema for Augment Token Manager
// Database: MySQL

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// User model - stores user credentials and info
model User {
  id        String   @id @default(uuid())
  username  String   @unique
  email     String?  @unique
  password  String   // bcrypt hashed password
  role      Role     @default(USER)
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  sessions Session[]
  tokens   Token[]

  @@index([username])
  @@index([email])
  @@map("users")
}

enum Role {
  ADMIN
  USER
}

// Session model - stores user sessions
model Session {
  id        String   @id @default(uuid())
  sessionId String   @unique
  userId    String
  expiresAt DateTime
  ipAddress String?  @db.VarChar(45)
  userAgent String?  @db.Text
  createdAt DateTime @default(now())

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([sessionId])
  @@index([expiresAt])
  @@map("sessions")
}

// Token model - stores Augment access tokens
model Token {
  id          String   @id @default(uuid())
  tenantUrl   String?  @db.VarChar(500)
  accessToken String   @db.Text
  portalUrl   String?  @db.VarChar(500)
  emailNote   String?  @db.VarChar(255)
  banStatus   String?  @db.Text // JSON string: {status, reason, updated_at}
  portalInfo  String?  @db.Text // JSON string
  shareInfo   String?  @db.Text // JSON string: {recharge_card, deactivation_code}
  isShared    Boolean  @default(false)
  authSession String?  @db.Text // Auth session cookie for credit tracking
  createdBy   String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  user User @relation(fields: [createdBy], references: [id], onDelete: Cascade)

  @@index([createdBy])
  @@index([emailNote])
  @@index([isShared])
  @@index([createdAt])
  @@map("tokens")
}

// UUID Record model - for UUID management feature
model UuidRecord {
  id          String   @id @default(uuid())
  uuid        String   @unique
  name        String   @db.VarChar(255)
  description String?  @db.Text
  category    String?  @db.VarChar(100)
  isActive    Boolean  @default(true)
  createdBy   String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([uuid])
  @@index([category])
  @@index([createdBy])
  @@map("uuid_records")
}

// Activation Code model
model ActivationCode {
  id          String   @id @default(uuid())
  code        String   @unique
  name        String   @db.VarChar(255)
  description String?  @db.Text
  maxUses     Int
  currentUses Int      @default(0)
  expiresAt   DateTime?
  isActive    Boolean  @default(true)
  createdBy   String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  usages ActivationCodeUsage[]

  @@index([code])
  @@index([isActive])
  @@index([createdBy])
  @@map("activation_codes")
}

// Activation Code Usage tracking
model ActivationCodeUsage {
  id        String   @id @default(uuid())
  codeId    String
  usedBy    String?  @db.VarChar(255)
  ipAddress String?  @db.VarChar(45)
  userAgent String?  @db.Text
  usedAt    DateTime @default(now())

  // Relations
  code ActivationCode @relation(fields: [codeId], references: [id], onDelete: Cascade)

  @@index([codeId])
  @@index([usedAt])
  @@map("activation_code_usages")
}

// Email Subscription model
model EmailSubscription {
  id             String    @id @default(uuid())
  email          String    @unique
  name           String?   @db.VarChar(255)
  categories     String    @db.Text // JSON array of categories
  isActive       Boolean   @default(true)
  confirmedAt    DateTime?
  unsubscribedAt DateTime?
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  @@index([email])
  @@index([isActive])
  @@map("email_subscriptions")
}

// OAuth State model - for OAuth flow state management
model OAuthState {
  id        String   @id @default(uuid())
  state     String   @unique
  codeVerifier String @db.Text
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@index([state])
  @@index([expiresAt])
  @@map("oauth_states")
}

// Rate Limit model - for API rate limiting
model RateLimit {
  id        String   @id @default(uuid())
  key       String   @unique // IP address or user ID
  count     Int      @default(1)
  expiresAt DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([key])
  @@index([expiresAt])
  @@map("rate_limits")
}

